\ProvidesPackage{reviewresponse}[2020/04/27 Review Response]

\RequirePackage{kvoptions}

\RequirePackage[breakable,skins]{tcolorbox}
\RequirePackage{xcolor}

%%% Package Options %%%
\DeclareStringOption{editor}
\DeclareStringOption{journal}
\DeclareStringOption{manuscript}
\ProcessKeyvalOptions*
%%%

%%% Variables
\let\editorname\reviewresponse@editor
\let\journal\reviewresponse@journal
\let\manuscript\reviewresponse@manuscript
%%% Colors
\definecolor{colordark}{RGB}{0,63,87}
\definecolor{colormedium}{RGB}{0,112,155}
\definecolor{colorlight}{RGB}{102,180,211}
\colorlet{colorbackground}{colorlight!20}
%%%


%%% General Settings
\setlength{\parindent}{0pt}
%%%

%%% Counters
\newcounter{reviewer@counter}
\setcounter{reviewer@counter}{0}
\newcounter{reviewcomment@counter}[reviewer@counter]
\setcounter{reviewcomment@counter}{0}
%%%

%%% Commands
\newcommand*{\printtitlepage}{
	\begin{center}
		\vspace*{1cm}
		\large{Responses to Reviewers' Comments for Manuscript \reviewresponse@manuscript}\\
		
		\vspace{1cm}
		\textbf{\LARGE{\@title}}\\
		\vspace{1cm}
		\Large{Addressed Comments for Publication to}
		
		\Large{\reviewresponse@journal}
		
		\large{by}
		
		{\large{\@author}}
	\end{center}
	\clearpage
}

\newcommand{\editor}{
	\clearpage
	\@ifundefined{pdfbookmark}{}{%
		\pdfbookmark[1]{Reponse to the Editor}{hyperref@editor}%
	}%
	\section*{Author's Response to the Editor}
}

\newcommand{\reviewer}{
	\clearpage
	\refstepcounter{reviewer@counter}%
	\@ifundefined{pdfbookmark}{}{%
		\pdfbookmark[1]{Reviewer \arabic{reviewer@counter}}{hyperref@reviewer\arabic{reviewer@counter}}%
	}%
	\section*{Author's Response to Reviewer \arabic{reviewer@counter}}
}
%%%

%%% Blocks %%%
\newenvironment{generalcomment}{%
	\begin{tcolorbox}[attach title to upper, title={General Comments}, after title={.\enskip}, fonttitle={\bfseries}, coltitle={colordark}, colback={colorbackground}, colframe={colormedium},]
}{\end{tcolorbox}\smallskip}

\newenvironment{revcomment}{\refstepcounter{reviewcomment@counter}
	\begin{tcolorbox}[adjusted title={Comment \arabic{reviewcomment@counter}}, fonttitle={\bfseries}, colback={colorbackground}, colframe={colormedium},]
}{\end{tcolorbox}\medskip}

\newenvironment{revresponse}[1][{Thank you for the comment.}]{%
	\textbf{Response:} #1
	
	
}{\vspace{4em}}

\newenvironment{change}{\begin{tcolorbox}[breakable,colback={black!2}, colframe={black!20},enhanced jigsaw,]
}{\end{tcolorbox}}